<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="me.niculicicris.filestore.application.controller.authentication.RegisterController"
           stylesheets="@style/authentication.css">
    <VBox styleClass="card, register-card">
        <VBox alignment="CENTER">
            <Label styleClass="title-1">Welcome to FileStore</Label>
        </VBox>
        <VBox alignment="CENTER" spacing="10">
            <Label>Username</Label>
            <TextField fx:id="usernameField" maxWidth="300"/>
        </VBox>
        <VBox alignment="CENTER" spacing="10">
            <Label alignment="BASELINE_LEFT">Password</Label>
            <PasswordField fx:id="passwordField" maxWidth="300"/>
        </VBox>
        <VBox alignment="CENTER" spacing="10">
            <Label alignment="BASELINE_LEFT">Confirm Password</Label>
            <PasswordField fx:id="confirmedPasswordField" maxWidth="300"/>
        </VBox>
        <HBox alignment="CENTER" spacing="20">
            <Button onMouseClicked="#onRegisterButtonClick" minWidth="80" styleClass="accent">
                Register
            </Button>
            <Button onMouseClicked="#onLoginButtonClick" minWidth="80">
                Login
            </Button>
        </HBox>
    </VBox>
</StackPane>
